<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".PersegiActivity">

    <TextView
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Menghitung Rumus Persegi"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_sisi"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_baseline_crop_square_24"
        android:hint="Masukkan Sisi" />

    <Button
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/bluebaby"
        android:text="Hitung Luas"
        android:id="@+id/btn_hitung_luas_persegi"/>

    <Button
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/bluebaby"
        android:text="Hitung Keliling"
        android:id="@+id/btn_hitung_keliling_persegi"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="Hasil"
        android:textSize="20sp"
        android:id="@+id/tv_hasil"/>

</LinearLayout>